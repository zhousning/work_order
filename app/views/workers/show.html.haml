- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
                = Setting.workers.label
                - if @worker.state == Setting.states.ongoing
                  %strong.text-danger
                    未验证
                - else
                  %strong.text-success
                    已验证
            .col-md-8.offset-2.p-5.border
              .card.border-0.mb-3.rounded-0
                .card-body
                  %table.table-bordered.day-pdt-table.w-100.mb-3
                    %tbody
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.workers.name
                        %td.p-2.text-center
                          = @worker.name
                    
                      
                        %td.p-2.text-center
                          = Setting.workers.idno
                        %td.p-2.text-center
                          = @worker.idno
                    
                      
                      %tr
                        %td.p-2.text-center
                          = Setting.workers.phone
                        %td.p-2.text-center
                          = @worker.phone
                    
                        %td.p-2.text-center
                          = Setting.workers.gender
                        %td.p-2.text-center
                          = user_gender(@worker.gender)
                    
                      
                      
                      %tr
                        %td.p-2.text-center
                          = Setting.workers.adress
                        %td.p-2.text-center{:colspan => 3}
                          = @worker.adress
                    
                      -#
                        %tr
                        %td.p-2.text-center
                          = Setting.workers.desc
                        %td.p-2.text-center
                          = @worker.desc
                    
              .row
                - @worker.img.split(',').each do |img|
                  .col-md-6
                    = image_tag img, :class => "w-100"
              
              -#
                .col-md-6
                  = image_tag @worker.avatar_url, :class => "w-100"
              
                .col-md-6
                  = image_tag @worker.idfront_url, :class => "w-100"
              
                .col-md-6
                  = image_tag @worker.idback_url, :class => "w-100"
              
              
      = render "layouts/bootstrap/card"
