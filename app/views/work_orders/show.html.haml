- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/factories/#{idencode(@factory.id)}/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
            .col-md-8.offset-2.p-5.border
              .card.border-0.mb-3.rounded-0
                .card-header.bg-transparent.border-dark
                  %h5
                    = Setting.work_orders.label
                .card-body
                  %table.table-bordered.day-pdt-table.w-100.mb-3
                    %tbody
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.work_orders.title
                        %td.p-2.text-center
                          = @work_order.title
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.pdt_time
                        %td.p-2.text-center
                          = @work_order.pdt_time
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.content
                        %td.p-2.text-center
                          = @work_order.content
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.work_orders.address
                        %td.p-2.text-center
                          = @work_order.address
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.urgent
                        %td.p-2.text-center
                          = @work_order.urgent
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.state
                        %td.p-2.text-center
                          = @work_order.state
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.work_orders.order_time
                        %td.p-2.text-center
                          = @work_order.order_time
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.limit_time
                        %td.p-2.text-center
                          = @work_order.limit_time
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.person
                        %td.p-2.text-center
                          = @work_order.person
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.work_orders.phone
                        %td.p-2.text-center
                          = @work_order.phone
                    
                      
                        %td.p-2.text-center
                          = Setting.work_orders.img
                        %td.p-2.text-center
                          = @work_order.img
                    
              .row
              
              .row
              
                - @work_order.enclosures.each do |e|
                  .col-md-6
                    = image_tag e.file_url(:small_width), :class => "w-100"
              
              .row
              
              
              .row
                - @work_order.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(URI.decode(e.file_url)), download_attachment_work_order_path(idencode(@work_order.id), :number => i, :ft => '')
              
              
      = render "layouts/bootstrap/card"
